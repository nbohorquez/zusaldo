<resources>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.Sherlock.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="icono_menu_acerca_de" >@drawable/ic_action_acerca_de_light</item>
        <item name="icono_menu_actualizar" >@drawable/ic_action_actualizar_light</item>
    </style>
    
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="FilaDeCartas">
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <style name="UltimaFila">
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="CategoryButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <style name="CategoryButtonContainerStyle">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="CategoryButtonTextStyle" parent="@style/Shadow">
        <item name="android:textAppearance">@style/TextAppearance.SecondaryItem</item>
        <item name="android:textSize">@dimen/category_button_count_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="CategoryButtonCountTextStyle" parent="@style/Shadow">
        <item name="android:textAppearance">@style/TextAppearance.PrimaryItem</item>
        <item name="android:textSize">@dimen/category_button_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/size_2</item>
    </style>
    
    <style name="TextAppearance.PrimaryItem" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/list_primary_text_size</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.SecondaryItem" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/list_secondary_text_size</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <style name="TextAppearance">
        <item name="android:textSize">@dimen/appearance_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/appearance_text_color</item>
        <item name="android:textColorHighlight">@color/textColorHighlight</item>
        <item name="android:textColorHint">@color/hint_foreground</item>
        <item name="android:textColorLink">@color/textColorLink</item>
        <item name="android:cacheColorHint">@color/hint_foreground</item>
    </style>
    
    <style name="Shadow">
        <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">0.5</item>
    </style>
    
    <style name="TextoPantallaLlamada">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#FFFFFFFF</item>
    </style>
    
</resources>